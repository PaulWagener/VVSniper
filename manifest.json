{
    "manifest_version": 2,
    "name": "Vakantie Veilingen Sniper",
    "description": "Snipe op veilingen",
    "version": "1.0",
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.vakantieveilingen.nl/*"
            ],
            "css": [
                "sniper.css"
            ],
            "js": [
                "sniper.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "icon-128.png"
    ],
    "permissions": [
        "storage"
    ]
}